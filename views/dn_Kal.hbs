    function submit()
    {
    var num = parseInt( document.getElementById("num").value);
    if( isNaN(num) )
    {
    alert(" Wporowadź liczbę!!! ");
    return;
    }
    var factorial = calcFact(num);
    document.getElementById("answer").innerHTML = num+"<b>! &nbsp; =  &nbsp;</b>"+factorial;
    }
    function calcFact( num )
    {
    var i;
    var fact = 1;
    for( i = 1; i <= num; i++ )
    {
    fact = fact * i;
    }
    return fact;
    }
